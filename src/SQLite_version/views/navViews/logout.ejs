<script>
	// Remove o token do localStorage, atualizar o nav de link e redireciona para a pagina home
	function logoutSystem() {
		document.cookie = 'authToken=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT';
		localStorage.removeItem('token');
		updateNav();
		window.location.href = '/';
	}

	// Executa ao carregar
	document.addEventListener('DOMContentLoaded', logoutSystem);
</script>
