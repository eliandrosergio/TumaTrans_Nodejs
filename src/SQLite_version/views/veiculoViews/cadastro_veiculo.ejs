<div class="mb-4">
    <h2>Cadastrar Veículo</h2>
    <p class="text-muted">Adicionar veículo ao sistema</p>
</div>

<div class="card">
    <div class="card-body">
        <div id="message" class="alert" style="display:none;"></div>
        
        <form id="veiculoForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="modelo" class="form-label">Modelo</label>
                    <input type="text" class="form-control" id="modelo" name="modelo" required>
                </div>

                <div class="col-md-6">
                    <label for="descricao" class="form-label">Descrição</label>
                    <input type="text" class="form-control" id="descricao" name="descricao" required>
                </div>

                <div class="col-md-6">
                    <label for="matricula" class="form-label">Matricula</label>
                    <input type="text" class="form-control" id="matricula" name="matricula" required>
                </div>

                <div class="col-md-6">
                    <label for="capacidade" class="form-label">Capacidade</label>
                    <input type="number" class="form-control" id="capacidade" name="capacidade" required>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Verifica o token, se inválido redireciona para login
    document.getElementById('veiculoForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const token = localStorage.getItem('token');
        const data = {
            modelo: document.getElementById('modelo').value,
            descricao: document.getElementById('descricao').value,
            matricula: document.getElementById('matricula').value,
            capacidade: document.getElementById('capacidade').value
        };
        try {
            const response = await fetch('/api/veiculos/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            const messageDiv = document.getElementById('message');
            if (response.ok) {
                emitirMensagem(messageDiv, 'success', result.message);
            } else {
                emitirMensagem(messageDiv, 'danger', result.error || 'Erro ao cadastrar.');
            }
            document.getElementById('veiculoForm').reset();
        } catch (err) {
            console.error('Erro:', err);
            document.getElementById('message').textContent = 'Erro na conexão.';
            document.getElementById('message').className = 'alert alert-danger';
            document.getElementById('message').style.display = 'block';
        }
    });
</script>
