<h2>Cadastrar Novo Aluno</h2>
<div id="message" class="alert" style="display:none;"></div>
<form id="alunoForm" class="mt-3">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Ex.: Eliandro Faustino" required>
    </div>
    <div class="mb-3">
        <label for="num_processo" class="form-label">Número do Processo</label>
        <input type="text" class="form-control" id="num_processo" name="num_processo" placeholder="Ex.: LA1234e5678" required>
    </div>
    <div class="mb-3">
        <label for="data_nascimento" class="form-label">Data de nascimento</label>
        <input type="date" class="form-control" id="data_nascimento" name="data_nascimento" required>
    </div>
    <div class="mb-3">
        <label for="endereco" class="form-label">Endereço</label>
        <input type="text" class="form-control" id="endereco" name="endereco" placeholder="Ex.: Estalagem Moagem, Viana" required>
    </div>
    <div class="mb-3">
        <label for="telefone_aluno" class="form-label">Telefone do Aluno</label>
        <input type="number" class="form-control" id="telefone_aluno" name="telefone_aluno" placeholder="Ex.: 921345678" required>
    </div>
    <div class="mb-3">
        <label for="telefone_encarregado" class="form-label">Telefone do Encarregado</label>
        <input type="number" class="form-control" id="telefone_encarregado" name="telefone_encarregado" placeholder="Ex.: 921345678" required>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-bottom: 20px;">Cadastrar</button>
</form>

<script>
    document.getElementById('alunoForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const token = localStorage.getItem('token');
        verificarToken(token);
        const data = {
            nome: document.getElementById('nome').value,
            num_processo: document.getElementById('num_processo').value,
            data_nascimento: document.getElementById('data_nascimento').value,
            endereco: document.getElementById('endereco').value,
            telefone_aluno: document.getElementById('telefone_aluno').value,
            telefone_encarregado: document.getElementById('telefone_encarregado').value
        };
        try {
            const response = await fetch('/api/alunos/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            const messageDiv = document.getElementById('message');
            if (response.ok) {
                emitirMensagem(messageDiv, 'success', result.message);
            } else {
                emitirMensagem(messageDiv, 'danger', result.error || 'Erro ao cadastrar.');
            }
            document.getElementById('alunoForm').reset();
        } catch (err) {
            console.error('Erro:', err);
            document.getElementById('message').textContent = 'Erro na conexão.';
            document.getElementById('message').className = 'alert alert-danger';
            document.getElementById('message').style.display = 'block';
        }
    });
</script>
