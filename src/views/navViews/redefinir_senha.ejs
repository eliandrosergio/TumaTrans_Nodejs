<h2>Redefinir Senha</h2>
<div id="message" class="alert" style="display:none;"></div>
<form id="resetForm" class="mt-3">
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="mb-3">
        <label for="newPassword1" class="form-label">Nova Senha</label>
        <div class="input-group">
            <input type="password" class="form-control" id="newPassword1" name="newPassword1" oninput="checkPasswordText()" required>
            <button type="button" id="togglePassword" class="btn btn-secondary translate-middle-y">Mostrar</button>
        </div>
    </div>
    <div class="mb-3">
        <label for="newPassword2" class="form-label">Repita a Senha</label>
        <input type="password" class="form-control" id="newPassword2" name="newPassword2" oninput="checkPasswordText()" required>
    </div>
    <button type="submit" id="submitButton" class="btn btn-primary" disabled>Redefinir</button>
</form>
<p class="mt-2">Esta pronto? <a href="/nav/login">Fazer Login</a></p>

<script>
    function checkPasswordText() {
        const messageDiv = document.getElementById('message');
        const submitButton = document.getElementById('submitButton');
        const newPassword1 = document.getElementById('newPassword1');
        const newPassword2 = document.getElementById('newPassword2');

        if (newPassword1.selectionStart >= 1 & newPassword2.selectionStart >= 1) {
            submitButton.setAttribute('disabled', 'disabled');
            if (newPassword1.value != newPassword2.value) {
                emitirMensagem(messageDiv, 'danger', 'Senha diferente em cada campo.');
            } else {
                submitButton.removeAttribute('disabled');
                emitirMensagem(messageDiv, '', '', 1);
            }
        }
    }

    document.getElementById('resetForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = {
            email: document.getElementById('email').value,
            newPassword: document.getElementById('newPassword1').value
        };
        try {
            const response = await fetch('/api/auth/reset-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const result = await response.json();
            const messageDiv = document.getElementById('message');
            if (response.ok) {
                emitirMensagem(messageDiv, 'success', result.message);
            } else {
                emitirMensagem(messageDiv, 'danger', result.error);
            }
            document.getElementById('resetForm').reset();
        } catch (err) {
            console.error('Erro:', err);
            document.getElementById('message').textContent = 'Erro na conexÃ£o.';
            document.getElementById('message').className = 'alert alert-danger';
            document.getElementById('message').style.display = 'block';
        }
    });

    // Toggle para mostrar/esconder senha
    document.getElementById('togglePassword').addEventListener('click', () => {
        const passwordInput1 = document.getElementById('newPassword1');
        const passwordInput2 = document.getElementById('newPassword2');
        const toggleBtn = document.getElementById('togglePassword');
        if (passwordInput1.type === 'password') {
            passwordInput1.type = 'text';
            passwordInput2.type = 'text';
            toggleBtn.textContent = 'Esconder';
        } else {
            passwordInput1.type = 'password';
            passwordInput2.type = 'password';
            toggleBtn.textContent = 'Mostrar';
        }
    });
</script>
